import SopraSteria from "@images/sponsors/sopra-steria.png";
import YouFM from "@images/sponsors/youfm.png";
import Walga from "@images/sponsors/walga.png";
import Noctua from "@images/sponsors/noctua.png";
import JustOneByte from "@images/sponsors/j1b.png";
import ORE from "@images/sponsors/ore.png";
