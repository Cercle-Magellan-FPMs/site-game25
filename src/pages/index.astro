const tournois = [
  {
    name: "League of Legends",
    image: LOL,
    description:
      "Une draft en 5v5 à jusqu'à 16 équipes. Venez montrer vos talents sur la faille de l'invocateur !",
  },
  {
    name: "???",
    description: "...",
  },
  {
    name: "???",
    description: "...",
  },
  {
    name: "???",
    description: "...",
  },
];

const sponsors = [
  {
    name: "Wavenet",
    url: "https://wavenet.be/",
    image: Wavenet,
  },
  {
    name: "Weloveat",
    url: "https://weloveat.be/",
    image: Weloveat,
  },
  {
    name: "Sopra Steria",
    url: "https://soprasteria.com/",
    image: SopraSteria,
  },
  {
    name: "YouFM",
    url: "https://youfm.be/",
    image: YouFM,
  },
  {
    name: "Walga",
    url: "https://www.walga.be/",
    image: Walga,
  },
  {
    name: "Noctua",
    url: "https://noctua.at/fr/",
    image: Noctua,
  },
  {
    name: "Just One Byte",
    url: "https://j1b.be/",
    image: JustOneByte,
  },
  {
